#!/bin/bash

# Color constants
# =====================================================
# @see https://stackoverflow.com/a/28938235/1096219 üëè

# Reset
export Color_Off='\033[0m' # Text Reset

# Regular Colors
export Black='\033[0;30m'  # Black
export Red='\033[0;31m'    # Red
export Green='\033[0;32m'  # Green
export Yellow='\033[0;33m' # Yellow
export Blue='\033[0;34m'   # Blue
export Purple='\033[0;35m' # Purple
export Cyan='\033[0;36m'   # Cyan
export White='\033[0;37m'  # White

# Bold
export BBlack='\033[1;30m'  # Black
export BRed='\033[1;31m'    # Red
export BGreen='\033[1;32m'  # Green
export BYellow='\033[1;33m' # Yellow
export BBlue='\033[1;34m'   # Blue
export BPurple='\033[1;35m' # Purple
export BCyan='\033[1;36m'   # Cyan
export BWhite='\033[1;37m'  # White

# Underline
export UBlack='\033[4;30m'  # Black
export URed='\033[4;31m'    # Red
export UGreen='\033[4;32m'  # Green
export UYellow='\033[4;33m' # Yellow
export UBlue='\033[4;34m'   # Blue
export UPurple='\033[4;35m' # Purple
export UCyan='\033[4;36m'   # Cyan
export UWhite='\033[4;37m'  # White

# Background
export On_Black='\033[40m'  # Black
export On_Red='\033[41m'    # Red
export On_Green='\033[42m'  # Green
export On_Yellow='\033[43m' # Yellow
export On_Blue='\033[44m'   # Blue
export On_Purple='\033[45m' # Purple
export On_Cyan='\033[46m'   # Cyan
export On_White='\033[47m'  # White

# High Intensity
export IBlack='\033[0;90m'  # Black
export IRed='\033[0;91m'    # Red
export IGreen='\033[0;92m'  # Green
export IYellow='\033[0;93m' # Yellow
export IBlue='\033[0;94m'   # Blue
export IPurple='\033[0;95m' # Purple
export ICyan='\033[0;96m'   # Cyan
export IWhite='\033[0;97m'  # White

# Bold High Intensity
export BIBlack='\033[1;90m'  # Black
export BIRed='\033[1;91m'    # Red
export BIGreen='\033[1;92m'  # Green
export BIYellow='\033[1;93m' # Yellow
export BIBlue='\033[1;94m'   # Blue
export BIPurple='\033[1;95m' # Purple
export BICyan='\033[1;96m'   # Cyan
export BIWhite='\033[1;97m'  # White

# High Intensity backgrounds
export On_IBlack='\033[0;100m'  # Black
export On_IRed='\033[0;101m'    # Red
export On_IGreen='\033[0;102m'  # Green
export On_IYellow='\033[0;103m' # Yellow
export On_IBlue='\033[0;104m'   # Blue
export On_IPurple='\033[0;105m' # Purple
export On_ICyan='\033[0;106m'   # Cyan
export On_IWhite='\033[0;107m'  # White

print_colors() {
  regular() {
    echo
    printf "${Black}%-9s${Color_Off}" Black
    printf "${Red}%-9s${Color_Off}" Red
    printf "${Green}%-9s${Color_Off}" Green
    printf "${Yellow}%-9s${Color_Off}" Yellow
    printf "${Blue}%-9s${Color_Off}" Blue
    printf "${Purple}%-9s${Color_Off}" Purple
    printf "${Cyan}%-9s${Color_Off}" Cyan
    printf "${White}%-9s${Color_Off}" White
  }

  bold() {
    echo
    printf "${BBlack}%-9s${Color_Off}" BBlack
    printf "${BRed}%-9s${Color_Off}" BRed
    printf "${BGreen}%-9s${Color_Off}" BGreen
    printf "${BYellow}%-9s${Color_Off}" BYellow
    printf "${BBlue}%-9s${Color_Off}" BBlue
    printf "${BPurple}%-9s${Color_Off}" BPurple
    printf "${BCyan}%-9s${Color_Off}" BCyan
    printf "${BWhite}%-9s${Color_Off}" BWhite
  }

  underline() {
    echo
    printf "${UBlack}%-9s${Color_Off}" UBlack
    printf "${URed}%-9s${Color_Off}" URed
    printf "${UGreen}%-9s${Color_Off}" UGreen
    printf "${UYellow}%-9s${Color_Off}" UYellow
    printf "${UBlue}%-9s${Color_Off}" UBlue
    printf "${UPurple}%-9s${Color_Off}" UPurple
    printf "${UCyan}%-9s${Color_Off}" UCyan
    printf "${UWhite}%-9s${Color_Off}" UWhite
  }

  background() {
    echo
    printf "${On_Black}%-9s${Color_Off}" On_Black
    printf "${On_Red}%-9s${Color_Off}" On_Red
    printf "${On_Green}%-9s${Color_Off}" On_Green
    printf "${On_Yellow}%-9s${Color_Off}" On_Yellow
    printf "${On_Blue}%-9s${Color_Off}" On_Blue
    printf "${On_Purple}%-9s${Color_Off}" On_Purple
    printf "${On_Cyan}%-9s${Color_Off}" On_Cyan
    printf "${On_White}%-9s${Color_Off}" On_White
  }

  high-intensity() {
    echo
    printf "${IBlack}%-9s${Color_Off}" IBlack
    printf "${IRed}%-9s${Color_Off}" IRed
    printf "${IGreen}%-9s${Color_Off}" IGreen
    printf "${IYellow}%-9s${Color_Off}" IYellow
    printf "${IBlue}%-9s${Color_Off}" IBlue
    printf "${IPurple}%-9s${Color_Off}" IPurple
    printf "${ICyan}%-9s${Color_Off}" ICyan
    printf "${IWhite}%-9s${Color_Off}" IWhite
  }

  bold-high-intensity() {
    echo
    printf "${BIBlack}%-9s${Color_Off}" BIBlack
    printf "${BIRed}%-9s${Color_Off}" BIRed
    printf "${BIGreen}%-9s${Color_Off}" BIGreen
    printf "${BIYellow}%-9s${Color_Off}" BIYellow
    printf "${BIBlue}%-9s${Color_Off}" BIBlue
    printf "${BIPurple}%-9s${Color_Off}" BIPurple
    printf "${BICyan}%-9s${Color_Off}" BICyan
    printf "${BIWhite}%-9s${Color_Off}" BIWhite
  }

  high-intensity-background() {
    echo
    printf "${On_IBlack}%-9s${Color_Off}" On_IBlack
    printf "${On_IRed}%-9s${Color_Off}" On_IRed
    printf "${On_IGreen}%-9s${Color_Off}" On_IGreen
    printf "${On_IYellow}%-9s${Color_Off}" On_IYellow
    printf "${On_IBlue}%-9s${Color_Off}" On_IBlue
    printf "${On_IPurple}%-9s${Color_Off}" On_IPurple
    printf "${On_ICyan}%-9s${Color_Off}" On_ICyan
    printf "${On_IWhite}%-9s${Color_Off}" On_IWhite
  }
}
